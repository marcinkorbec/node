<section class="summary">
    <h3>Wybrane ciastko:</h3>
    <ul>
        <li>{{cookie.base}} - {{pricify (findPrice bases cookie.base)}}zł</li>
    </ul>

    <h3>Wybrane dodatki:</h3>
    <ul>
        {{#each cookie.addons}}
            <li>{{this}} {{pricify (findPrice @root.addons this)}}zł</li>
        {{/each}}
    </ul>
    {{log sum}}
    <p><strong>łączna cena: {{pricify sum}}PLN</strong></p>
</section>