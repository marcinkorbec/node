<h1>Client {{client.name}} </h1>
<table class="header-of-left">
    <tbody>
        <tr>
            <th>
                E-mail
            </th>
            <td>
                <a href="mailto:{{client.mail}}" target="_blank">{{client.mail}}</a>
            </td>
        </tr>
        <tr>
            <th>
                Imię
            </th>
            <td>
                {{client.name}}
            </td>
        </tr>
        <tr>
            <th>
                Data następnego kontaktu
            </th>
            <td>
                {{client.nextContactAt}}
            </td>
        </tr>
        <tr>
            {{#if client.notes}}
                <th>
                    Notatki
                </th>
                <td>
                    {{client.notes}}
                </td>
            {{/if}}

        </tr>
    </tbody>
</table>
<p>
<form method="get" action="/client/form/edit/{{client.id}}">
    <button type="submit">Edytuj klienta</button>
</form>
</p>

{{> go-home}}
