<div class="container">
    <h2 class="gray-header">Edytujesz: {{client.name}}</h2>
    <p class="small">id: {{client.id}}</p>
    <form method="POST" action="/client/{{client.id}}?_method=PUT">
        <div class="form">
            <label>
                <p>
                    Email:
                </p>
                <p>
                    <input type="email" name="mail" value="{{client.mail}}">
                </p>
            </label>
            <label for="">
                <p>
                    Imię:
                </p>
                <p>
                    <input type="text" name="name" value="{{client.name}}">
                </p>
            </label>
            <label for="">
                <p>
                    Data następnego kontaktu:
                </p>
                <p>
                    <input type="date" name="next" value="{{client.next}}">
                </p>
            </label>
            <p>
                Notatka:
            </p>
            <p>
                <textarea name="notes" id="" cols="30" rows="10">{{client.notes}}</textarea>
            </p>
            <button type="submit" class="btn btn-success">Edytuj!</button>
        </div>
    </form>
</div>