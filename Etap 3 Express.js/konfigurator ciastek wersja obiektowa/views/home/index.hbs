<!-- HEADER -->

<div class="container section">
    <h1>Skonfiguruj {{upper "ciasteczko!"}}</h1>
</div>

<!-- BASE -->

<div class="container section">
    <h2>Wybierz bazę:</h2>
    {{#each allBases}}
        <button  onclick="location.href='/select-base/{{this.[0]}}'" class="btn btn-warning"> Ciastko {{this.[0]}}: {{this.[1]}}zł</li></button>
    {{/each}}
</div>

<!-- ADDONS -->

{{#if cookie.base}}
    <div class="container section">
        <h2>Wybierz dodatek:</h2>
        {{#each allAddons}}
            {{#if (isNotOnArray @root.cookie.addons this.[0])}}
                <button  onclick="location.href='/select-addon/{{this.[0]}}'" class="btn btn-warning">{{this.[0]}}: {{this.[1]}}zł</li></button>
            {{/if}}
        {{/each}}
    </div>
{{/if}}

<!-- COOKIE LIST -->

{{#if cookie.base}}
    <div class="container section">
        {{> cookie-preview }}
    </div>
    <div class="container section">
        {{> addons-list deleteBtn=true}}
        <button  onclick="location.href='/order/summary'" class="btn btn-warning btn-lg">Zamów!</li></button>
    </div>
{{else}}
    <div class="container section">
        <p>Aby zobaczyć podgląd ciastka, wybierz jego bazę.</p>
    </div>
{{/if}}


